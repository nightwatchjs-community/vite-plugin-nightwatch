{
  "name": "vite-plugin-nightwatch",
  "version": "0.4.2",
  "description": "Component testing plugin that integrates Vite with Nightwatch.js. Supports Vue and React components with more to come soon.",
  "main": "index.js",
  "scripts": {
    "eslint": "eslint index.js src nightwatch",
    "test": "nightwatch --env vue --headless",
    "test-unit": "mocha test/unit",
    "test-react": "nightwatch --env react --headless"
  },
  "keywords": [
    "nightwatch",
    "nightwatch.js",
    "vite",
    "component test",
    "component-testing",
    "vue",
    "react"
  ],
  "author": "Andrei Rusu",
  "license": "MIT",
  "dependencies": {
    "@nightwatch/esbuild-utils": "0.2.0",
    "@vue/test-utils": "^2.2.7",
    "assertion-error": "^1.1.0",
    "mkdirp": "^1.0.4",
    "sinon": "^14.0.0",
    "ws": "^8.5.0"
  },
  "files": [
    "nightwatch",
    "src",
    "index.js",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@vitejs/plugin-react": "^3.0.1",
    "@vitejs/plugin-vue": "^4.0.0",
    "chromedriver": "^112.0.0",
    "eslint": "^8.26.0",
    "mocha": "^9.2.0",
    "mockery": "^2.1.0",
    "nightwatch": "^2.6.10",
    "nightwatch-axe-verbose": "^2.1.0",
    "react": "^18.2.0",
    "react-dom": "18.2.0",
    "vite": "^4.0.4",
    "vue": "^3.2.45"
  }
}
